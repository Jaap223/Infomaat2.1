<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <include
        android:id="@+id/nav_drawer_layout"
    layout="@layout/nav_drawer" />
    
    <include
        android:id="@+id/nav_drawer_layout"
        layout="@layout/nav_drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/editTextEditTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nav_drawer_layout"
        android:layout_marginTop="16dp"
        android:hint="Title" />

    <EditText
        android:id="@+id/editTextEditContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextEditTitle"
        android:layout_marginTop="8dp"
        android:hint="Content"/>

    <Button
        android:id="@+id/buttonSaveEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextEditContent"
        android:layout_marginTop="40dp"
        android:text="Save"/>

</RelativeLayout>
